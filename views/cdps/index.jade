extends ../layout

block content
  h1.
    #{title}
  ul
    - each cdp, i in cdps
      div.row
        form(id='update', name='update', method='post', action='/cdps/delete')
            input(type='hidden',name='id',value=cdp._id)
            input(type='text',name='amount',value=cdp.amount)
            input(type='text',name='days',value=cdp.days)
            input(type='text',name='interest',value=cdp.interest)
            input(type='text',name='active',value=cdp.active)
            input(type='text',name='created_at',value=cdp.created_at)
            input(type='text',name='finish_at',value=cdp.finish_at)
            div.actions
                a(href='javascript:void(0);',id='editCDP') Edit
                a(href='javascript:void(0);',id='deleteCDP') Delete
                input(type='submit',value='Delete')
    div.add_cdp
      form(id='add_cdp', name='add_cdp', method='post', action='/cdps/add')
        div.input
            span.label Amount
            input(type='text',id='amount', name='amount')
        div.input
            span.label Days
            input(type='text', name='days')
        div.input
            span.label Interest
            input(type='text', name='interest')
        div.input
            span.label Active
            input(type='text', name='active')
        div.actions
          a(href='javascript:void(0);',id='addCDP') Add CDP
          input(type='submit',value='Add')